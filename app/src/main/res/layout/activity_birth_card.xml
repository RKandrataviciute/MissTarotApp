<?xml version="1.0" encoding="utf-8"?>
<ScrollView

    android:layout_width="match_parent"
    android:layout_height="match_parent"

    xmlns:android="http://schemas.android.com/apk/res/android">

<LinearLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".BirthCardActivity">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

    <ImageView

        android:id="@+id/soul_card_image"
        android:layout_width="200dp"
        android:layout_height="300dp"
        android:src="@drawable/cardback"
        />

        <ImageView

            android:id="@+id/personality_card_image"
            android:layout_width="200dp"
            android:layout_height="300dp"
            android:src="@drawable/cardback"
            />

    </LinearLayout>


    <EditText
        android:id="@+id/date_of_birth"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="24dp"
        android:clickable="true"
        android:focusable="false"
        android:hint="Enter your birth date"/>


    <TextView
        android:id="@+id/birth_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:text="1"
        />

    <TextView
        android:id="@+id/soul_and_personality"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:text="Your personality and soul card"

        />
    <TextView
        android:id="@+id/soul_card"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:text="Your soul card"

        />



    <TextView
        android:id="@+id/soul_personality_card_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"

        />

    <TextView
        android:id="@+id/personality_card"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:text="Your personality card"

        />

    <TextView
        android:id="@+id/personality_card_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"

        />



</LinearLayout>
</ScrollView>